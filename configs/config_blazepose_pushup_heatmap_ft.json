{
    "experiment_name":                  "blazepose_pushup_heatmap_ft",
    "trainer":                          "blazepose_trainer",
    "data_loader":                      "pushup",      
    "data": {   
        "train_images":                 "data/pushup/images/",
        "train_labels":                 "data/pushup/train.json",
        "val_images":                   "data/pushup/images/",
        "val_labels":                   "data/pushup/val.json",
        "test_images":                  "data/pushup/images/",
        "test_labels":                  "data/pushup/test.json"
    },                   
    "model" : {
        "im_width":                     256,
        "im_height":                    256,
        "heatmap_width":                128,
        "heatmap_height":               128,
        "heatmap_kp_sigma":             4,
        "num_joints":                   7,
        "model_type":                  "TWO_HEAD"
    },
    "train": {
        "train_phase":                  "HEATMAP",
        "heatmap_loss":                 "focal_tversky",
        "keypoint_loss":                "binary_crossentropy",
        "loss_weights":                 {"heatmap": 1.0, "joints": 0.0},
        "train_batch_size":             16,
        "val_batch_size":               16,
        "nb_epochs":                    200,
        "learning_rate":                1e-3,
        "load_weights":                 false,
        "pretrained_weights_path":      "models/model_to_load.h5"
    },
    "test": {
        "model_file" :                 ""
    }
}
